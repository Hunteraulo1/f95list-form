{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "$lib/*": [
        "./src/lib/*"
      ],
      "$types/*": [
        "./src/types/*"
      ],
      "$components/*": [
        "./src/components/*"
      ]
    }
  }
}
